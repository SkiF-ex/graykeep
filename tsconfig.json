{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "typeRoots" : ["node_modules/@types", "src/types"],
    "baseUrl": "./src"
  },
  "include": [
    "src",
    "global.ts"
  ]
}
